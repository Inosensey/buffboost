{
  "name": "buffboost",
  "private": true,
  "version": "1.0.0",
  "description": "Gamified payment gateway simulator",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",

    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    
    "docker:logs": "docker-compose logs -f",
    "docker:logs:backend": "docker-compose logs -f backend",
    "docker:logs:frontend": "docker-compose logs -f frontend",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:prune": "docker system prune -af",
    
    "docker:up": "npm run docker:dev",  
    "docker:down": "npm run docker:dev:down",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache",
    
    "docker:prisma:studio": "docker-compose exec backend npx prisma studio",
    "docker:prisma:migrate": "docker-compose exec backend npx prisma migrate dev",
    "docker:prisma:generate": "docker-compose exec backend npx prisma generate",
    "docker:prisma:reset": "docker-compose exec backend npx prisma migrate reset",
    
    "start": "npm run docker:prod",  
    "start:dev": "npm run docker:dev"  
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "payment",
    "gateway",
    "nestjs",
    "nextjs",
    "docker"
  ],
  "author": "Philip Mathew",
  "license": "MIT"
}
